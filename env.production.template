# =======================================================================
# CARTECHSTORE PRODUCTION ENVIRONMENT CONFIGURATION
# =======================================================================
# IMPORTANT: Copy this file to .env and fill in actual values
# Never commit .env file to version control!

# =======================================================================
# APPLICATION SETTINGS
# =======================================================================
NODE_ENV=production
LOG_LEVEL=info
DATA_PATH=./data

# Application URLs
DOMAIN=cartechstore.com
FRONTEND_URL=https://cartechstore.com
API_URL=https://api.cartechstore.com
ADMIN_URL=https://admin.cartechstore.com

# Service Ports
FRONTEND_PORT=3000
BACKEND_PORT=3005
DB_PORT=5432
REDIS_PORT=6379

# =======================================================================
# DATABASE CONFIGURATION
# =======================================================================
DB_NAME=cartechstore_prod
DB_USER=cartechstore_user
DB_PASSWORD=CHANGE_ME_SECURE_DB_PASSWORD_HERE
DB_SSL=true

# Connection Pool Settings
DB_POOL_MIN=5
DB_POOL_MAX=30
DB_POOL_ACQUIRE=60000
DB_POOL_IDLE=10000

# =======================================================================
# REDIS CONFIGURATION
# =======================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_SECURE_REDIS_PASSWORD_HERE
REDIS_DB=0

# =======================================================================
# SECURITY SETTINGS
# =======================================================================
# JWT Configuration (Generate secure random strings)
JWT_SECRET=CHANGE_ME_JWT_SECRET_MINIMUM_32_CHARACTERS_LONG
JWT_EXPIRES_IN=8h
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=CHANGE_ME_SESSION_SECRET_MINIMUM_32_CHARACTERS_LONG

# Password Hashing
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# =======================================================================
# EMAIL CONFIGURATION
# =======================================================================
# SMTP Settings
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
EMAIL_FROM=noreply@cartechstore.com

# Email Templates
EMAIL_TEMPLATE_PATH=./templates/emails
EMAIL_LOGO_URL=https://cartechstore.com/logo.png

# =======================================================================
# PAYMENT PROCESSING
# =======================================================================
# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_CURRENCY=EUR

# =======================================================================
# THIRD-PARTY SERVICES
# =======================================================================
# Google reCAPTCHA
RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# Google Analytics
GA_TRACKING_ID=UA-XXXXXXXXX-1

# Google Tag Manager
GTM_ID=GTM-XXXXXXX

# =======================================================================
# MONITORING & LOGGING
# =======================================================================
# Sentry Error Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production
SENTRY_RELEASE=1.0.0

# Elasticsearch & Kibana (Optional)
ELASTICSEARCH_HOSTS=http://elasticsearch:9200
KIBANA_HOST=http://kibana:5601

# Performance Monitoring
NEW_RELIC_LICENSE_KEY=your_new_relic_license_key
NEW_RELIC_APP_NAME=Cartechstore Production

# =======================================================================
# SSL/TLS CONFIGURATION
# =======================================================================
# SSL Certificate Configuration
SSL_EMAIL=admin@cartechstore.com
SSL_CERT_PATH=/etc/nginx/ssl/fullchain.pem
SSL_KEY_PATH=/etc/nginx/ssl/privkey.pem

# Let's Encrypt Settings
LETSENCRYPT_EMAIL=admin@cartechstore.com
LETSENCRYPT_DOMAINS=cartechstore.com,www.cartechstore.com,api.cartechstore.com

# =======================================================================
# BACKUP CONFIGURATION
# =======================================================================
# Backup Settings
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=cartechstore-backups
BACKUP_S3_REGION=eu-central-1

# AWS Configuration for Backups
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=eu-central-1

# =======================================================================
# CDN & STATIC FILES
# =======================================================================
# CDN Configuration
CDN_URL=https://cdn.cartechstore.com
STATIC_FILES_URL=https://static.cartechstore.com

# S3 or Compatible Storage
S3_BUCKET=cartechstore-static
S3_REGION=eu-central-1
S3_ACCESS_KEY=your_s3_access_key
S3_SECRET_KEY=your_s3_secret_key

# =======================================================================
# SOCIAL MEDIA & INTEGRATION
# =======================================================================
# Social Media Links
FACEBOOK_URL=https://facebook.com/cartechstore
TWITTER_URL=https://twitter.com/cartechstore
INSTAGRAM_URL=https://instagram.com/cartechstore
LINKEDIN_URL=https://linkedin.com/company/cartechstore

# Social Login (Optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# =======================================================================
# BUSINESS CONFIGURATION
# =======================================================================
# Company Information
COMPANY_NAME=CARTECHSTORE SP. Z O.O.
COMPANY_ADDRESS=ul. Przemysłowa 15, 70-800 Szczecin, Poland
COMPANY_PHONE=+48 91 123 45 67
COMPANY_EMAIL=biuro@cartechstore.com
COMPANY_NIP=123-456-78-90
COMPANY_REGON=123456789

# Business Hours
BUSINESS_HOURS_WEEKDAYS=8:00-17:00
BUSINESS_HOURS_SATURDAY=9:00-14:00
BUSINESS_HOURS_SUNDAY=Closed

# =======================================================================
# FEATURE FLAGS
# =======================================================================
# Enable/Disable Features
FEATURE_REGISTRATION=true
FEATURE_B2B_REGISTRATION=true
FEATURE_GUEST_CHECKOUT=true
FEATURE_WISHLIST=true
FEATURE_REVIEWS=true
FEATURE_CHAT_SUPPORT=false
FEATURE_NEWSLETTER=true
FEATURE_BLOG=true

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=Serwis jest tymczasowo niedostępny z powodu prac konserwacyjnych.

# =======================================================================
# API CONFIGURATION
# =======================================================================
# External APIs
INVENTORY_API_URL=https://api.inventory-provider.com
INVENTORY_API_KEY=your_inventory_api_key
SHIPPING_API_URL=https://api.shipping-provider.com
SHIPPING_API_KEY=your_shipping_api_key

# API Rate Limits
API_RATE_LIMIT_RPM=1000
API_RATE_LIMIT_RPH=10000

# =======================================================================
# CACHE CONFIGURATION
# =======================================================================
# Cache TTL Settings (in seconds)
CACHE_TTL_PRODUCTS=3600
CACHE_TTL_CATEGORIES=7200
CACHE_TTL_STATIC_PAGES=86400
CACHE_TTL_USER_SESSIONS=1800

# =======================================================================
# PERFORMANCE SETTINGS
# =======================================================================
# Node.js Performance
UV_THREADPOOL_SIZE=16
NODE_OPTIONS=--max-old-space-size=1024

# Database Performance
DB_QUERY_TIMEOUT=30000
DB_STATEMENT_TIMEOUT=60000

# =======================================================================
# NOTIFICATION SETTINGS
# =======================================================================
# Admin Notifications
ADMIN_EMAIL=admin@cartechstore.com
ADMIN_PHONE=+48911234567

# Notification Channels
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK

# =======================================================================
# LEGAL & COMPLIANCE
# =======================================================================
# GDPR Compliance
GDPR_CONTACT_EMAIL=privacy@cartechstore.com
GDPR_DPO_EMAIL=dpo@cartechstore.com

# Cookie Settings
COOKIE_DOMAIN=.cartechstore.com
COOKIE_SECURE=true
COOKIE_SAMESITE=Strict

# =======================================================================
# DEVELOPMENT OVERRIDES (Keep empty in production)
# =======================================================================
# Override these only if needed for specific production debugging
# DEBUG_MODE=false
# VERBOSE_LOGGING=false
# DISABLE_RATE_LIMITING=false

# =======================================================================
# HEALTH CHECK CONFIGURATION
# =======================================================================
HEALTH_CHECK_TIMEOUT=10000
HEALTH_CHECK_INTERVAL=30000

# =======================================================================
# ADDITIONAL SECURITY HEADERS
# =======================================================================
CONTENT_SECURITY_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' *.google.com *.googleapis.com; style-src 'self' 'unsafe-inline' *.googleapis.com; img-src 'self' data: *.google.com *.googleapis.com; font-src 'self' *.googleapis.com; connect-src 'self' *.google.com *.googleapis.com
REFERRER_POLICY=strict-origin-when-cross-origin
PERMISSIONS_POLICY=camera=(), microphone=(), geolocation=()

# =======================================================================
# ENVIRONMENT VALIDATION
# =======================================================================
# This should always be 'production' for production environment
ENVIRONMENT_VALIDATION=production 